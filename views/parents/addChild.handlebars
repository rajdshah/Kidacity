<div class="container d-flex flex-column">
    <div class="row align-items-center justify-content-center g-0 min-vh-100">
        <div class="col-lg-5 col-md-8 py-8 py-xl-0">
            <div class="card shadow">
                <div class="card-body p-6">

                    <div class="mb-4">
                        <h1 class="mb-1 fw-bold">Create Child Account</h1>
                    </div>

                    <form
                        action="/parents/addChild"
                        id="add-child-form"
                        class="needs-validation"
                        method="post"
                        novalidate
                    >

                        <div class="mb-3">
                            <label for="childFirstName" class="form-label">Child
                                First Name<span
                                    class="mandatory"
                                >*</span></label>
                            <input
                                type="text"
                                id="childFirstName"
                                class="form-control"
                                name="childFirstName"
                                placeholder="Enter child first name here"
                                required="required"
                                autocomplete="off"
                            />
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Child first name is mandatory.
                            </div>
                            <div class="invalid-feedback">
                                Child first name should have only alphabetical
                                characters and/or spaces.
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="childLastName" class="form-label">Child
                                Last Name<span
                                    class="mandatory"
                                >*</span></label>
                            <input
                                type="text"
                                id="childLastName"
                                class="form-control"
                                name="childLastName"
                                placeholder="Enter child last name here"
                                required="required"
                                autocomplete="off"
                            />
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Child last name is mandatory.
                            </div>
                            <div class="invalid-feedback">
                                Child last name should have only alphabetical
                                characters and/or spaces.
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="childEmail" class="form-label">Child
                                Email<span class="mandatory">*</span></label>
                            <input
                                type="email"
                                id="childEmail"
                                class="form-control"
                                name="childEmail"
                                placeholder="Enter child email address here"
                                required="required"
                                autocomplete="off"
                            />
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Child email is mandatory and it should be in
                                valid format.
                            </div>
                        </div>

                        <label for="childPassword" class="form-label">Child
                            Password<span class="mandatory">*</span></label>
                        <div class="mb-3 input-group">
                            <input
                                type="password"
                                id="childPassword"
                                class="form-control"
                                name="childPassword"
                                placeholder="********"
                                required="required"
                                autocomplete="off"
                            />
                            <button
                                class="btn btn-outline-secondary show-password"
                                type="button"
                            >Show</button>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Child password is mandatory.
                            </div>
                            <div class="invalid-feedback">
                                Child password should be of at least 8
                                characters long.
                            </div>
                            <div class="invalid-feedback">
                                Child password should have only alphanumeric or
                                special characters and no spaces.
                            </div>
                        </div>

                        <p class="text-danger d-none" id="error-message"></p>

                        <div>
                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary">
                                    Submit
                                </button>
                            </div>
                        </div>

                    </form>

                </div>

            </div>
        </div>
    </div>
</div>

<script src="https://unpkg.com/validator@latest/validator.min.js"></script>
<script src="/public/js/parents.js"></script>